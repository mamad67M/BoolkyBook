@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row p-2">
            <h4 class="text-danger">
               Voulez vous vraiment supprimer cet objet?
            </h4>
            <hr />

        </div>


        <div class="mb-3">
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
               
            </div>
        </div>
        <div class="mb-3">
            <div>
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled />
               

            </div>
        </div>
        <div class="mb-3">
            <div>
                <label asp-for="CreatedDateTime"></label>
                <input asp-for="CreatedDateTime" class="form-control" disabled />
              

            </div>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete </button>
        <a asp-controller="Categorie" asp-action="Index" class="btn btn-secondary">GoBack </a>



    </div>
</form>


